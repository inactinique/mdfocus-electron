{
  "name": "mdfocus-electron",
  "version": "0.1.0",
  "type": "module",
  "description": "Assistant d'écriture pour historiens avec RAG et intégration Zotero/Tropy",
  "main": "dist/src/main/index.js",
  "author": {
    "name": "mdFocus Team",
    "email": "contact@mdfocus.dev"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\"",
    "dev:full": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\" \"npm run wait-and-start\"",
    "wait-and-start": "sleep 3 && NODE_ENV=development npm start",
    "dev:main": "tsc -p tsconfig.node.json --watch",
    "dev:preload": "tsc -p tsconfig.preload.json --watch",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.node.json --noEmitOnError false && node scripts/fix-imports.mjs && node scripts/fix-backend.mjs",
    "build:preload": "tsc -p tsconfig.preload.json --noEmitOnError false",
    "build:renderer": "vite build",
    "build:all": "npm run build && electron-builder",
    "build:linux": "npm run build && electron-builder --linux",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:dir": "npm run build && electron-builder --dir",
    "preview": "vite preview",
    "start": "env -u ELECTRON_RUN_AS_NODE npx electron . --no-sandbox",
    "start:prod": "npm run build && electron .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist release"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "better-sqlite3": "^11.0.0",
    "docx": "^9.5.1",
    "electron-store": "^10.0.0",
    "graphology": "^0.26.0",
    "graphology-communities-louvain": "^2.0.2",
    "graphology-layout-forceatlas2": "^0.10.1",
    "graphology-metrics": "^2.4.0",
    "lucide-react": "^0.562.0",
    "marked": "^17.0.1",
    "pdfjs-dist": "^4.0.0",
    "puppeteer": "^24.33.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-force-graph": "^1.48.1",
    "react-force-graph-2d": "^1.29.0",
    "react-markdown": "^9.0.1",
    "react-resizable-panels": "^2.1.9",
    "react-router-dom": "^6.22.0",
    "recharts": "^3.6.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "build": {
    "appId": "com.mdfocus.app",
    "productName": "mdFocus",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "backend/python-services",
        "to": "python-services",
        "filter": [
          "**/*",
          "!**/.venv",
          "!**/__pycache__",
          "!**/*.pyc"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "build/icon.png",
      "executableName": "mdfocus-electron",
      "description": "Assistant d'écriture pour historiens avec RAG et intégration Zotero/Tropy",
      "desktop": {
        "Name": "mdFocus",
        "Comment": "Assistant d'écriture pour historiens avec RAG et intégration Zotero/Tropy",
        "Categories": "Office;TextEditor;",
        "MimeType": "text/markdown;",
        "StartupWMClass": "mdFocus"
      },
      "executableArgs": [
        "--no-sandbox",
        "%U"
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
